include LICENSE.txt
include README.md

include pyproject.toml
include tsconfig.json
include package.json
include webpack.config.js
include {{ cookiecutter.python_package_name }}/labextension/*.tgz
include yarn.lock
include .yarnrc
graft {{ cookiecutter.python_package_name }}/standalone/widgets/{{cookiecutter.widget_identifier}}.js

# Documentation
graft docs
exclude docs/\#*
prune docs/build
prune docs/gh-pages
prune docs/dist

# Examples
graft examples

# Javascript files
graft {{ cookiecutter.python_package_name }}/nbextension
graft src
graft lib
prune **/node_modules

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints